<style>

    .matchDiv {
        margin:.5em;
        display: flex;
        flex-direction:row;
        align-items:center;
        border-style: solid;
    }

    .profilePicture{
        width:80px;
        height:80px;
    }
    .section{
        margin:.5em;
        display:flex;
        width:20%;
        align-items:center;
        flex-direction:column;
    }
</style>
